	</documentation>
	<category>tools</category>
	<website>https://github.com/nextcloud/files_fullnextsearch</website>
	<bugs>https://github.com/nextcloud/files_fullnextsearch/issues</bugs>
	<repository>https://github.com/nextcloud/files_fullnextsearch.git</repository>
	<screenshot>https://raw.githubusercontent.com/nextcloud/fullnextsearch/master/screenshots/0.3.0.png</screenshot>
	<dependencies>
		<nextcloud min-version="12" max-version="14"/>
	</dependencies>

	<settings>
		<admin>OCA\Files_FullNextSearch\Settings\Admin</admin>
	</settings>

	<fullnextsearch>
		<provider>OCA\Files_FullNextSearch\Provider\FilesProvider</provider>
	</fullnextsearch>

</info>
